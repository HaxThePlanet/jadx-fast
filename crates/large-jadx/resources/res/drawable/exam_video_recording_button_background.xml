<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:useLevel="false"
            android:innerRadius="@dimen/exam_video_recording_button_ring_inner_radius"
            android:thickness="@dimen/exam_video_recording_button_ring_thickness">
            <solid android:color="@color/white"/>
            <size
                android:height="@dimen/exam_video_recording_button_size"
                android:width="@dimen/exam_video_recording_button_size"/>
        </shape>
    </item>
    <item android:gravity="center_vertical">
        <shape android:shape="oval">
            <solid android:color="@color/secondaryTransparent"/>
            <size
                android:height="@dimen/exam_video_recording_button_inner_circle_size"
                android:width="@dimen/exam_video_recording_button_inner_circle_size"/>
        </shape>
    </item>
</layer-list>
