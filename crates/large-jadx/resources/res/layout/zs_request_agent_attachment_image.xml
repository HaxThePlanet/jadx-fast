<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="2"
    style="@style/ZendeskSdkTheme.Light.Request.Agent.Attachment.Holder">
    <androidx.cardview.widget.CardView
        android:id="@+id/request_agent_attachment_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ZendeskSdkTheme.Light.Request.Agent.Attachment.Bubble">
        <ImageView
            android:id="@+id/request_agent_message_attachment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="2"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/request_agent_attachment_name"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/request_agent_attachment_card"
        android:layout_alignParentLeft="true"
        android:importantForAccessibility="2"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        style="@style/ZendeskSdkTheme.Light.Request.Message.Status"/>
</RelativeLayout>
