<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_challenge_share_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/normal_text_size"
            android:textStyle="0x1"
            android:textColor="@color/darkGray"
            android:gravity="center_vertical"
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/social.share.challenges.my.photo"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <ImageView
            android:id="@+id/horizontal_bar1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/divider"/>
        <RelativeLayout
            android:id="@+id/instagram_share"
            android:background="@drawable/ripple_effect_transparent_rectangle"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="@string/challenge.share.instagram"
                style="@style/InstagramDialogTextView"/>
            <ImageView style="@style/RowDivider"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/other_share"
            android:background="@drawable/ripple_effect_transparent_rectangle"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="@string/general.share"
                style="@style/InstagramDialogTextView"/>
            <ImageView style="@style/RowDivider"/>
        </RelativeLayout>
        <Button
            android:textColor="@color/secondary"
            android:id="@+id/cancel_button"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/general.done"
            app:rippleColor="@color/lightGray"/>
    </LinearLayout>
</FrameLayout>
