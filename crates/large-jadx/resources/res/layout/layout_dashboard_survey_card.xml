<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_dashboard_survey_card_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#4fb8f9"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/survey_dogs"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"/>
        <ImageView
            android:id="@+id/left_cloud"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_cloud_left"
            android:adjustViewBounds="true"
            android:alpha="0.25"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintVertical_bias="0"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/personalized.training.program.dasboard.banner"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/image"
            style="@style/SubscriptionPromotionTitle"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/start.now.text"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/title"
            style="@style/SubscriptionPromotionDescription"/>
        <ImageView
            android:id="@+id/right_cloud"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:src="@drawable/vector_cloud_right"
            android:adjustViewBounds="true"
            android:alpha="0.25"
            app:layout_constraintBottom_toTopOf="@+id/survey_button"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintVertical_bias="0"/>
        <Button
            android:id="@+id/survey_button"
            android:tag="binding_1"
            android:layout_width="0dp"
            android:layout_marginTop="32dp"
            android:text="@string/start.questionnaire.button"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/description"
            style="@style/DashboardWhiteButton"/>
        <Button
            android:id="@+id/all_programs_button"
            android:tag="binding_2"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="28dp"
            android:text="@string/explore.programs.button"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/survey_button"
            style="@style/DashboardOutlinedButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
