<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:tag="layout/cell_dashboard_week_sumary_day_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12dp"
        android:id="@+id/title_text"
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circle_background"
        android:tag="binding_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:srcCompat="@drawable/shape_circle"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/streak_icon"
        android:tag="binding_3"
        android:visibility="gone"
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/circle_background"
        app:layout_constraintStart_toStartOf="@+id/circle_background"
        app:layout_constraintTop_toTopOf="@+id/circle_background"
        app:srcCompat="@drawable/ic_streak_lightning"/>
    <TextView
        android:id="@+id/duration_text"
        android:tag="binding_4"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@+id/circle_background"
        app:layout_constraintEnd_toEndOf="@+id/circle_background"
        app:layout_constraintStart_toStartOf="@+id/circle_background"
        app:layout_constraintTop_toBottomOf="@+id/streak_icon"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_circular"
        android:tag="binding_5"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_background"
        app:layout_constraintEnd_toEndOf="@+id/circle_background"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/circle_background"
        app:layout_constraintTop_toTopOf="@+id/circle_background"
        app:layout_constraintVertical_bias="0"
        style="@style/WeekTrainingSummaryProgress"/>
</androidx.constraintlayout.widget.ConstraintLayout>
