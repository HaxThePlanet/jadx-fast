<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_request_recycler_view"
        android:paddingTop="@dimen/zs_request_message_margin_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:descendantFocusability="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"/>
    <zendesk.support.request.ViewMessageComposer
        android:layout_gravity="0x50"
        android:id="@+id/activity_request_message_composer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</merge>
