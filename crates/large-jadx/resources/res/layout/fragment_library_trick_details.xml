<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:tag="layout/fragment_library_trick_details_0"
    android:background="@color/certificate_green"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trick_card"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/clicker_placeholder_view"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:tag="binding_2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/darkGray"
                    android:ellipsize="end"
                    android:tag="binding_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toStartOf="@+id/toolbar_actions"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/toolbar_actions"
                    android:tag="binding_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/margin_24"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintTop_toTopOf="0">
                    <com.google.android.material.chip.Chip
                        android:gravity="end"
                        android:id="@+id/moreTips"
                        android:tag="binding_5"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/toolbar_chip_height"
                        android:checkable="false"
                        android:layout_marginEnd="@dimen/margin_4"
                        app:chipBackgroundColor="@color/backgroundGreen"
                        app:chipEndPadding="0dp"
                        app:chipIcon="@drawable/ic_info_book"
                        app:chipIconSize="0dp"
                        app:chipStartPadding="16dp"
                        app:ensureMinTouchTargetSize="false"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toStartOf="@+id/good_examples"
                        app:layout_constraintTop_toTopOf="0"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/good_examples"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/toolbar_chip_height"
                        android:checkable="false"
                        android:layout_marginEnd="@dimen/margin_4"
                        app:chipBackgroundColor="@color/backgroundGreen"
                        app:chipEndPadding="0dp"
                        app:chipIcon="@drawable/ic_good_examples"
                        app:chipIconSize="0dp"
                        app:chipStartPadding="16dp"
                        app:ensureMinTouchTargetSize="false"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toEndOf="0"
                        app:layout_constraintTop_toTopOf="0"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/trick_details_view_pager"
            android:tag="binding_6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/tab_layout"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar"
            app:layout_constraintVertical_bias="0.5"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/swipe_animation"
            android:tag="binding_7"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/trick_details_view_pager"
            app:layout_constraintEnd_toEndOf="@+id/trick_details_view_pager"
            app:layout_constraintStart_toStartOf="@+id/trick_details_view_pager"
            app:layout_constraintTop_toTopOf="@+id/trick_details_view_pager"
            app:lottie_autoPlay="true"
            app:lottie_fileName="swipe_training_cards.json"
            app:lottie_loop="true"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timer_layout"
            android:tag="binding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/continue_button"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0"
                app:srcCompat="@drawable/ic_icons_timer"/>
            <TextView
                android:textColor="@color/darkGray"
                android:id="@+id/paused_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView2"
                app:layout_constraintTop_toTopOf="0"
                style="@style/Body16"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/timer_layout"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:tabBackground="@drawable/dot_lesson_introduction_selector"
            app:tabGravity="1"
            app:tabIndicator="@null"
            app:tabMode="1"
            app:tabPaddingEnd="8dp"
            app:tabPaddingStart="8dp"/>
        <Button
            android:id="@+id/continue_button"
            android:tag="binding_9"
            android:layout_width="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            style="@style/YellowUnelevatedButton"/>
        <FrameLayout
            android:id="@+id/loading_spinner"
            android:tag="binding_10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/trick_details_view_pager"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar"
            app:layout_constraintVertical_bias="0">
            <ProgressBar
                android:layout_gravity="center_vertical"
                android:id="@+id/progress_bar"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:progressDrawable="@drawable/circular_progress_bar"
                style="?android:attr/progressBarStyleLarge"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <app.dogo.com.dogo_android.view.dailytraining.ClickerSoundMaterialButton
        android:id="@+id/clicker"
        android:tag="binding_11"
        android:rotation="-30"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/clicker_anchor"
        app:srcCompat="@drawable/button_clicker_selector"
        style="@style/ClickerIconButtonWithLayout"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/card_height_barrier"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="2"
        app:constraint_referenced_ids="card_with_clicker_height_barrier, clicker_min_height_guide"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/card_with_clicker_height_barrier"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="3"
        app:constraint_referenced_ids="clicker_max_height_guide, card_min_height_guide"/>
    <androidx.legacy.widget.Space
        android:id="@+id/clicker_placeholder_view"
        android:tag="binding_12"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintBottom_toTopOf="@+id/bottom_white_spacer"
        app:layout_constraintTop_toBottomOf="@+id/card_height_barrier"
        app:layout_constraintVertical_bias="1"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/card_min_height_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="600dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/clicker_max_height_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="260dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/clicker_min_height_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="160dp"/>
    <View
        android:id="@+id/bottom_white_spacer"
        android:tag="binding_13"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="0"/>
    <View
        android:id="@+id/viewpager_blocker"
        android:background="@color/opaque_black"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"/>
    <View
        android:id="@+id/clicker_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/clicker_placeholder_view"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
