<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tool" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_entry_base_0"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/challenge_image"
        android:background="@drawable/challenge_image_placeholder"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0"/>
    <ImageView
        android:id="@+id/share_button"
        android:tag="binding_1"
        android:background="@drawable/ripple_effect_transparent_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/challenge_image"
        app:layout_constraintEnd_toEndOf="@+id/challenge_image"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/share_photo"/>
    <Button
        android:id="@+id/debug_special_button_1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Entry Time Travel"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0"
        style="@style/WhiteButton"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/page_dots"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:minHeight="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/challenge_image"
        app:layout_constraintVertical_bias="0"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/challenge_image"
        app:layout_constraintVertical_bias="0">
        <TextView
            android:textSize="@dimen/card_tiny_text"
            android:textColor="@color/darkestGray"
            android:gravity="0x800015"
            android:id="@+id/vote_count"
            android:tag="binding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/touch_minimum"
            android:minHeight="@dimen/touch_minimum"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="viewEnd"
            android:layout_toStartOf="@+id/like_button"
            android:letterSpacing="0.03"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toStartOf="@+id/like_button"
            app:layout_constraintTop_toTopOf="0"
            tools:text="0"/>
        <RelativeLayout
            android:id="@+id/dog_profile_avatar_holder"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="4dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_alignParentStart="true"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0">
            <ImageView
                android:id="@+id/dog_profile_avatar"
                android:tag="binding_4"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/ambassador_badge"
                android:tag="binding_5"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ambassador_badge_vector"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/card_normal_text"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/dog_name"
            android:tag="binding_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="viewStart"
            android:layout_marginStart="16dp"
            android:letterSpacing="0.01"
            app:layout_constraintBottom_toTopOf="@+id/creation_date"
            app:layout_constraintEnd_toStartOf="@+id/vote_count"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dog_profile_avatar_holder"
            app:layout_constraintTop_toTopOf="0"
            app:layout_constraintVertical_chainStyle="2"/>
        <TextView
            android:textSize="@dimen/card_tiny_text"
            android:textColor="@color/gray"
            android:ellipsize="end"
            android:id="@+id/creation_date"
            android:tag="binding_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lineSpacingExtra="4sp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.03"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toStartOf="@+id/vote_count"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/badge_barrier"
            app:layout_constraintTop_toBottomOf="@+id/dog_name"
            app:layout_constraintVertical_bias="0"/>
        <ImageView
            android:id="@+id/premium_badge"
            android:tag="binding_8"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/creation_date"
            app:layout_constraintStart_toStartOf="@+id/dog_name"
            app:layout_constraintTop_toTopOf="@+id/creation_date"
            app:srcCompat="@drawable/premium_badge_no_star"/>
        <ImageView
            android:id="@+id/admin_badge"
            android:tag="binding_9"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/creation_date"
            app:layout_constraintStart_toStartOf="@+id/dog_name"
            app:layout_constraintTop_toTopOf="@+id/creation_date"
            app:srcCompat="@drawable/badge_admin"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/badge_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="6"
            app:constraint_referenced_ids="admin_badge, premium_badge"/>
        <FrameLayout
            android:id="@+id/like_button"
            android:layout_width="@dimen/touch_minimum"
            android:layout_height="@dimen/touch_minimum"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/report_button"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toStartOf="@+id/report_button"
            app:layout_constraintTop_toTopOf="0">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/heart_active"
                android:tag="binding_10"
                android:layout_width="@dimen/tiny_image_size"
                android:layout_height="@dimen/tiny_image_size"
                android:src="@drawable/challenge_like_state_list"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/report_button"
            android:tag="binding_11"
            android:background="@drawable/ripple_effect_transparent_rectangle"
            android:layout_width="@dimen/touch_minimum"
            android:layout_height="@dimen/touch_minimum"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintTop_toTopOf="0">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:tag="binding_12"
                android:layout_width="@dimen/tiny_image_size"
                android:layout_height="@dimen/tiny_image_size"
                android:adjustViewBounds="true"
                android:tint="@color/icon_gray"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/caption_view"
        android:tag="binding_13"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/translation_view"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/post_info_view"
        tools:visibility="visible">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/darkestGray"
            android:tag="binding_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:fontFamily="sans-serif"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:letterSpacing="0.03"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/translation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/comment_view"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/caption_view">
        <TextView
            android:textSize="12sp"
            android:textStyle="0x0"
            android:textColor="@color/gray"
            android:id="@+id/translate_textview"
            android:tag="binding_15"
            android:paddingTop="10dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="4dp"/>
        <ProgressBar
            android:id="@+id/pBar"
            android:tag="binding_16"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/translate_textview"
            android:indeterminateTint="@color/gray"
            style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>
    <include
        android:id="@+id/comment_view"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/translation_view"
        app:layout_constraintVertical_bias="0"
        layout="@layout/layout_comment_input"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animation_like"
        android:visibility="gone"
        android:layout_width="@dimen/small_image_size"
        android:layout_height="@dimen/small_image_size"
        android:layout_marginBottom="8dp"
        android:src="@drawable/vector_like_full"
        android:tint="@color/lightGray"
        android:alpha="0.8"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/challenge_image"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"/>
    <ImageView
        android:id="@+id/entry_border"
        android:tag="binding_17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/challenge_image"
        app:layout_constraintEnd_toEndOf="@+id/challenge_image"
        app:layout_constraintStart_toStartOf="@+id/challenge_image"
        app:layout_constraintTop_toTopOf="@+id/challenge_image"/>
    <FrameLayout
        android:id="@+id/featured_button"
        android:visibility="gone"
        android:layout_width="@dimen/touch_minimum"
        android:layout_height="@dimen/touch_minimum"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="0x11"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="@+id/challenge_image"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/vector_start"
            android:tint="@color/darkGray"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:tag="binding_18"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/vector_start"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
