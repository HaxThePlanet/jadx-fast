<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_library_program_list_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:textColor="@color/green"
        android:gravity="center_vertical"
        android:id="@+id/show_all_button"
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/show.all"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:rippleColor="@color/lightGray"
        style="@style/OutlinedWhiteButton"/>
    <TextView
        android:id="@+id/section_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/programs.list"
        android:maxLines="1"
        android:layout_marginStart="24dp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="0.1sp"
        app:autoSizeTextType="1"
        app:layout_constraintEnd_toStartOf="@+id/show_all_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        style="@style/LibrarySectionHeader"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:tag="binding_2"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/section_name"
        app:layout_constraintVertical_bias="0"/>
    <ImageView
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:srcCompat="@drawable/divider_library_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>
