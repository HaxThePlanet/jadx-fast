<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:tag="layout/layout_comment_input_0"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:minHeight="56dp"
    app:layout_constraintBottom_toBottomOf="0"
    app:layout_constraintEnd_toEndOf="0"
    app:layout_constraintStart_toStartOf="0"
    app:layout_constraintTop_toBottomOf="@+id/top_bar"
    app:layout_constraintVertical_bias="1">
    <ImageView
        android:id="@+id/profile_avatar"
        android:tag="binding_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0.5"/>
    <EditText
        android:id="@+id/comment_field"
        android:tag="binding_2"
        android:background="@android:color/transparent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="160dp"
        android:hint="@string/add.comment"
        android:maxLength="1000"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toStartOf="@+id/send_button"
        app:layout_constraintStart_toEndOf="@+id/profile_avatar"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0.5"/>
    <FrameLayout
        android:id="@+id/send_button"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:minWidth="@dimen/touch_minimum"
        android:minHeight="@dimen/touch_minimum"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="1">
        <TextView
            android:textSize="@dimen/card_tiny_text"
            android:textColor="@color/gray"
            android:gravity="0x800015"
            android:id="@+id/comment_count_label"
            android:tag="binding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/touch_minimum"
            android:minHeight="@dimen/touch_minimum"
            android:lineSpacingExtra="4sp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="24dp"
            android:letterSpacing="0.03"/>
        <ImageView
            android:layout_gravity="0x800013"
            android:tag="binding_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:stateListAnimator="@animator/click_float"
            app:srcCompat="@drawable/vector_send"/>
    </FrameLayout>
    <ImageView
        android:tag="binding_6"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/send_button"
        app:layout_constraintVertical_bias="1"
        style="@style/RowDivider"/>
    <ImageView
        android:tag="binding_7"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0"
        style="@style/RowDivider"/>
    <FrameLayout
        android:id="@+id/avatar_click_area"
        android:tag="binding_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toStartOf="@+id/comment_field"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
