<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/dialog_challenge_filter_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/card_title_text"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/general.filter"/>
        </FrameLayout>
        <ImageView
            android:layout_height="1dp"
            style="@style/RowDivider"/>
        <RelativeLayout
            android:id="@+id/latest_row"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/box2"
                android:tag="binding_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:buttonTint="@color/checkbox_tint_selector"/>
            <TextView
                android:textSize="@dimen/normal_text_size"
                android:tag="binding_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/box2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/featured_row"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/featured_box"
                android:tag="binding_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:buttonTint="@color/checkbox_tint_selector"/>
            <TextView
                android:textSize="@dimen/normal_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challenge.filter.featured"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/featured_box"/>
        </RelativeLayout>
        <ImageView
            android:layout_height="1dp"
            style="@style/RowDivider"/>
        <FrameLayout
            android:tag="binding_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/card_title_text"
                android:textColor="@color/secondary"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/general.done"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
