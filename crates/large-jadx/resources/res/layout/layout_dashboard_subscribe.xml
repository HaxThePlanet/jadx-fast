<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/layout_dashboard_subscribe_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">
    <app.dogo.com.dogo_android.util.customview.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_base_alpha="1"
        app:shimmer_direction="1"
        app:shimmer_dropoff="0.4"
        app:shimmer_duration="1500"
        app:shimmer_highlight_alpha="0.5"
        app:shimmer_repeat_delay="5000"
        app:shimmer_tilt="70">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/ripple_effect_golden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/subscription.banner.dashboard.header"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0"
                style="@style/DashboardTryDogoPremiumTitle"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/subscription.banner.dashboard.text"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/title"
                style="@style/DashboardTryDogoPremiumDescription"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/subscribe_button"
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:text="@string/benfit.screen.choose.plan.button"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/description"
                style="@style/DashboardWhiteButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </app.dogo.com.dogo_android.util.customview.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>
