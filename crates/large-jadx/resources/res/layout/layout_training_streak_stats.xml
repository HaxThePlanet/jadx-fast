<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_training_streak_stats_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_40">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/current_streak_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0">
        <ImageView
            android:id="@+id/current_streak_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:srcCompat="@drawable/ic_streak_current"/>
        <TextView
            android:id="@+id/current_streak_days"
            android:tag="binding_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            app:layout_constraintEnd_toEndOf="@+id/current_streak_image"
            app:layout_constraintStart_toStartOf="@+id/current_streak_image"
            app:layout_constraintTop_toBottomOf="@+id/current_streak_image"
            style="@style/TrainingStatsCurrentStreakDaysText"/>
        <TextView
            android:id="@+id/current_streak_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/streak.current.text"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/current_streak_days"
            style="@style/TrainingStatsCurrentStreakText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider"
        android:background="#4c5d5630"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/current_streak_layout"
        app:layout_constraintEnd_toStartOf="@+id/longest_streak_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/current_streak_layout"
        app:layout_constraintTop_toTopOf="@+id/current_streak_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/longest_streak_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toStartOf="@+id/divider_second"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0">
        <ImageView
            android:id="@+id/longest_streak_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:srcCompat="@drawable/ic_streak_longest"/>
        <TextView
            android:id="@+id/longest_streak_days"
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            app:layout_constraintEnd_toEndOf="@+id/longest_streak_image"
            app:layout_constraintStart_toStartOf="@+id/longest_streak_image"
            app:layout_constraintTop_toBottomOf="@+id/longest_streak_image"
            style="@style/TrainingStatsCurrentStreakDaysText"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/streak.longest.text"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/longest_streak_days"
            style="@style/TrainingStatsCurrentStreakText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider_second"
        android:background="#4c5d5630"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/current_streak_layout"
        app:layout_constraintEnd_toStartOf="@+id/time_trained_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/longest_streak_layout"
        app:layout_constraintTop_toTopOf="@+id/current_streak_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/time_trained_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider_second"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0">
        <ImageView
            android:id="@+id/time_trained_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:srcCompat="@drawable/ic_streak_timer"/>
        <TextView
            android:id="@+id/time_trained_hours"
            android:tag="binding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            app:layout_constraintEnd_toEndOf="@+id/time_trained_image"
            app:layout_constraintStart_toStartOf="@+id/time_trained_image"
            app:layout_constraintTop_toBottomOf="@+id/time_trained_image"
            style="@style/TrainingStatsCurrentStreakDaysText"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/total.time.spent.training.header"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/time_trained_hours"
            style="@style/TrainingStatsCurrentStreakText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
