<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_frame"
    android:tag="layout/cell_challenge_details_tab_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_height="1dp"
        style="@style/RowDivider"/>
    <RelativeLayout
        android:gravity="bottom"
        android:id="@+id/title_section"
        android:background="@drawable/ripple_effect_transparent_rectangle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_big_height">
        <TextView
            android:textSize="@dimen/card_normal_text"
            android:textStyle="0x1"
            android:id="@+id/frame_title"
            android:tag="binding_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/expansion_icon_left"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@color/secondary"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/vector_right_arrow_small"/>
        <ImageView
            android:id="@+id/expansion_icon_down"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@color/secondary"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/vector_down_arrow"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/expandable_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">
        <LinearLayout
            android:orientation="vertical"
            android:tag="binding_2"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <ImageView
        android:layout_height="1dp"
        style="@style/RowDivider"/>
</LinearLayout>
