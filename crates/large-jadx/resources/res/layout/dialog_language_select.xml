<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:tag="layout/dialog_language_select_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="300dp">
    <TextView
        android:id="@+id/title"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:text="@string/settings.change.language"
        android:paddingStart="24dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        style="@style/DialogTitle"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:tag="binding_1"
        android:scrollbars="0x200"
        android:layout_width="0dp"
        android:layout_height="325dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <View
        android:background="@color/lightGrayDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <View
        android:background="@color/lightGrayDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/recycle_view"/>
    <Button
        android:textSize="14sp"
        android:textColor="@color/secondary"
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="@string/general.done"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginEnd="@dimen/margin_8"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintTop_toBottomOf="@+id/recycle_view"
        style="@style/Official.Alert.Button"/>
    <FrameLayout
        android:id="@+id/background"
        android:tag="binding_2"
        android:background="@color/dark_gray_transparent"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0">
        <ProgressBar
            android:layout_gravity="top"
            android:id="@+id/progressBar"
            android:tag="binding_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:indeterminate="true"
            android:foregroundGravity="0x10"
            style="?android:attr/progressBarStyleLarge"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
