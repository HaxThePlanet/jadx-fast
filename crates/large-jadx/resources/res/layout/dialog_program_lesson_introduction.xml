<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_program_lesson_introduction_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/top_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            layout="@layout/cell_program_lesson_introduction_top"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/introduction_view_pager"
            android:tag="binding_2"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/introduction_view_pager"
            app:tabBackground="@drawable/dot_lesson_introduction_selector"
            app:tabGravity="1"
            app:tabIndicator="@null"
            app:tabMode="1"
            app:tabPaddingEnd="8dp"
            app:tabPaddingStart="8dp"/>
        <Button
            android:textSize="13sp"
            android:id="@+id/next"
            android:layout_width="200dp"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="40dp"
            android:text="@string/general.next"
            android:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            style="@style/OnboardingYellowButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
