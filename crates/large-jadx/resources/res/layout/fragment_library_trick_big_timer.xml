<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:tag="layout/fragment_library_trick_big_timer_0"
    android:background="@color/certificate_green"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trick_card"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/clicker_placeholder_view"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:navigationIcon="@drawable/ic_back_arrow_gray">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/darkGray"
                    android:ellipsize="end"
                    android:tag="binding_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toStartOf="@+id/toolbar_actions"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/toolbar_actions"
                    android:tag="binding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/margin_24"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintTop_toTopOf="0">
                    <com.google.android.material.chip.Chip
                        android:gravity="end"
                        android:id="@+id/moreTips"
                        android:tag="binding_4"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/toolbar_chip_height"
                        android:checkable="false"
                        android:layout_marginEnd="@dimen/margin_4"
                        app:chipBackgroundColor="@color/backgroundGreen"
                        app:chipEndPadding="0dp"
                        app:chipIcon="@drawable/ic_info_book"
                        app:chipIconSize="0dp"
                        app:chipStartPadding="16dp"
                        app:ensureMinTouchTargetSize="false"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toStartOf="@+id/good_examples"
                        app:layout_constraintTop_toTopOf="0"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/good_examples"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/toolbar_chip_height"
                        android:checkable="false"
                        android:layout_marginEnd="@dimen/margin_4"
                        app:chipBackgroundColor="@color/backgroundGreen"
                        app:chipEndPadding="0dp"
                        app:chipIcon="@drawable/ic_good_examples"
                        app:chipIconSize="0dp"
                        app:chipStartPadding="16dp"
                        app:ensureMinTouchTargetSize="false"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toEndOf="0"
                        app:layout_constraintTop_toTopOf="0"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/finish_button"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar">
            <app.dogo.com.dogo_android.util.customview.ArcProgressBar
                android:id="@+id/arcProgressBar"
                android:tag="binding_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="@dimen/margin_32"
                app:backgroundColor="@color/lightGrayDivider"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/progress_arc_guide"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0"
                app:maxValue="1000"
                app:progress="1"/>
            <TextView
                android:textSize="60dp"
                android:textColor="@color/darkGray"
                android:gravity="center_vertical"
                android:id="@+id/trained_time"
                android:tag="binding_6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                app:layout_constraintBottom_toBottomOf="@+id/arcProgressBar"
                app:layout_constraintEnd_toEndOf="@+id/arcProgressBar"
                app:layout_constraintStart_toStartOf="@+id/arcProgressBar"
                app:layout_constraintTop_toTopOf="@+id/arcProgressBar"
                app:layout_constraintVertical_bias="0.47"
                style="@style/ProgramCardTextTitle"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/backgroundGreenScreen"
                android:id="@+id/take_rest"
                android:tag="binding_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/take.rest.title"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="@+id/arcProgressBar"
                app:layout_constraintStart_toStartOf="@+id/arcProgressBar"
                app:layout_constraintTop_toBottomOf="@+id/trained_time"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/brown"
                android:id="@+id/overtime"
                android:tag="binding_8"
                android:background="@drawable/rounded_corner_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:backgroundTint="@color/primary"
                app:layout_constraintBottom_toTopOf="@+id/trained_time"
                app:layout_constraintEnd_toEndOf="@+id/trained_time"
                app:layout_constraintStart_toStartOf="@+id/trained_time"/>
            <Button
                android:id="@+id/description_button"
                android:tag="binding_9"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:maxLines="1"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="@dimen/margin_32"
                app:autoSizeMaxTextSize="14dp"
                app:autoSizeMinTextSize="5dp"
                app:autoSizeTextType="1"
                app:layout_constraintBottom_toBottomOf="@+id/arcProgressBar"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/arcProgressBar"
                style="@style/SmallDashboardButtonOutlinedDark"/>
            <TextView
                android:gravity="0x31"
                android:id="@+id/trick_description"
                android:tag="binding_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                app:autoSizeMaxTextSize="14dp"
                app:autoSizeMinTextSize="5dp"
                app:autoSizeTextType="1"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/description_button"
                style="@style/trickDetailsDescription2"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:id="@+id/progress_arc_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.7"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/finish_button"
            android:tag="binding_11"
            android:layout_width="0dp"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/general.finish"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            style="@style/YellowUnelevatedButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <app.dogo.com.dogo_android.view.dailytraining.ClickerSoundMaterialButton
        android:id="@+id/clicker"
        android:tag="binding_12"
        android:rotation="-30"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/clicker_anchor"
        app:srcCompat="@drawable/button_clicker_selector"
        style="@style/ClickerIconButtonWithLayout"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/card_height_barrier"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="2"
        app:constraint_referenced_ids="card_with_clicker_height_barrier, clicker_min_height_guide"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/card_with_clicker_height_barrier"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="3"
        app:constraint_referenced_ids="clicker_max_height_guide, card_min_height_guide"/>
    <androidx.legacy.widget.Space
        android:id="@+id/clicker_placeholder_view"
        android:tag="binding_13"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintBottom_toTopOf="@+id/bottom_white_spacer"
        app:layout_constraintTop_toBottomOf="@+id/card_height_barrier"
        app:layout_constraintVertical_bias="1"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/card_min_height_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="600dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/clicker_max_height_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="260dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/clicker_min_height_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="160dp"/>
    <View
        android:id="@+id/bottom_white_spacer"
        android:tag="binding_14"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="0"/>
    <View
        android:id="@+id/viewpager_blocker"
        android:background="@color/opaque_black"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"/>
    <View
        android:id="@+id/clicker_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/clicker_placeholder_view"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
