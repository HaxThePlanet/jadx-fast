<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/dialog_challenge_entry_creation_0"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_top_bar"/>
    <ScrollView
        android:scrollbars="0x200"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/entry_image"
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/challenge_image_placeholder"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/user_icon_image"
                    android:tag="binding_2"
                    android:layout_width="@dimen/tiny_image_size"
                    android:layout_height="@dimen/tiny_image_size"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentStart="true"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0"
                    app:layout_constraintVertical_bias="0"/>
                <FrameLayout
                    android:id="@+id/caption_touch_area"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toEndOf="@+id/user_icon_image"
                    app:layout_constraintTop_toTopOf="0"/>
                <EditText
                    android:textSize="@dimen/card_tiny_text"
                    android:textColor="@color/darkestGray"
                    android:gravity="0x800033"
                    android:id="@+id/editText"
                    android:tag="binding_3"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:minHeight="@dimen/touch_minimum"
                    android:hint="@string/say.something.about.this.photo"
                    android:maxLength="1000"
                    android:layout_alignParentTop="true"
                    android:lineSpacingExtra="4sp"
                    android:inputType="0x24051"
                    android:fontFamily="sans-serif"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@+id/user_icon_image"
                    android:letterSpacing="0.03"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/user_icon_image"
                    app:layout_constraintTop_toTopOf="@+id/user_icon_image"
                    app:layout_constraintVertical_bias="0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textSize="@dimen/card_tiny_text"
                android:textColor="@color/darkestGray"
                android:gravity="top"
                android:tag="binding_4"
                android:background="@color/white"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/challenge.participation.policy"
                android:lineSpacingExtra="5sp"
                android:fontFamily="sans-serif"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:letterSpacing="0.02"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
