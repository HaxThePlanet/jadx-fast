<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/cell_workout_trick_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/daily_training_card_radius"
        app:cardElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/margin_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/photo"
                android:tag="binding_1"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginTop="@dimen/margin_16"
                android:importantForAccessibility="2"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0"
                style="@style/DailyTrainingPhoto"/>
            <TextView
                android:textSize="22dp"
                android:id="@+id/name"
                android:tag="binding_2"
                android:padding="4dp"
                android:layout_marginTop="@dimen/margin_4"
                android:maxLines="3"
                android:lineSpacingExtra="1dp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/photo"
                style="@style/DailyTrainingName"/>
            <TextView
                android:textSize="14dp"
                android:id="@+id/description"
                android:tag="binding_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:lineSpacingExtra="3dp"
                app:autoSizeMaxTextSize="14dp"
                app:autoSizeMinTextSize="8dp"
                app:autoSizeStepGranularity="0.1dp"
                app:autoSizeTextType="1"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/name"
                style="@style/DailyTrainingDescription"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
