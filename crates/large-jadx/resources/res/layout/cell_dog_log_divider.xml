<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_dog_log_divider_0"
    android:paddingTop="@dimen/margin_36"
    android:paddingBottom="@dimen/margin_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/first_divider"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_24"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toStartOf="@+id/divider_text"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        style="@style/RowDivider"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#839490"
        android:gravity="center_vertical"
        android:id="@+id/divider_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:text="@string/log.entry.screen.other.acitvities"
        android:layout_marginStart="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@+id/first_divider"
        app:layout_constraintEnd_toStartOf="@+id/second_divider"
        app:layout_constraintStart_toEndOf="@+id/first_divider"
        app:layout_constraintTop_toTopOf="@+id/first_divider"/>
    <ImageView
        android:id="@+id/second_divider"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_24"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toEndOf="@+id/divider_text"
        app:layout_constraintTop_toTopOf="0"
        style="@style/RowDivider"/>
</androidx.constraintlayout.widget.ConstraintLayout>
