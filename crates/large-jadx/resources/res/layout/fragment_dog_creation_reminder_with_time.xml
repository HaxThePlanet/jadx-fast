<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/fragment_dog_creation_reminder_with_time_0"
    android:background="@color/welcome_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:background="@color/transparent"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:navigationIcon="@drawable/ic_back_arrow_green_toolbar"
        app:titleTextColor="@color/darkGray"
        style="@style/WelcomeScreenToolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/toolbar_skip"
                android:background="@drawable/ripple_effect_transparent_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/general.skip"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="0"
                style="@style/DogCreateSkip"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dog_image"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/margin_20"
                android:src="@drawable/ic_setreminders_illustration_1"
                android:adjustViewBounds="true"
                android:paddingStart="@dimen/margin_48"
                android:paddingEnd="@dimen/margin_48"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="8dp"
                android:text="@string/onboarding.v2.set.reminders"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_24"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/dog_image"/>
            <app.dogo.com.dogo_android.view.compat.FocusedBorderTextInput
                android:id="@+id/hour_edit"
                android:layout_width="96dp"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/margin_12"
                app:layout_constraintEnd_toStartOf="@+id/hour_minute_separator"
                app:layout_constraintTop_toBottomOf="@+id/title"
                style="@style/DogCreation.TimePicker.EditLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:textSize="48dp"
                    android:tag="binding_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:selectAllOnFocus="true"
                    style="@style/DogCreation.TimePicker.EditText"/>
            </app.dogo.com.dogo_android.view.compat.FocusedBorderTextInput>
            <TextView
                android:textSize="38dp"
                android:textColor="@color/darkGray"
                android:gravity="center_vertical"
                android:id="@+id/hour_minute_separator"
                android:padding="@dimen/margin_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/material_clock_display_divider"
                android:maxEms="1"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:importantForAccessibility="2"
                android:fontFamily="@font/montserrat_semi_bold"
                app:layout_constraintBottom_toBottomOf="@+id/hour_edit"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="@+id/hour_edit"/>
            <app.dogo.com.dogo_android.view.compat.FocusedBorderTextInput
                android:id="@+id/minute_edit"
                android:layout_width="96dp"
                android:layout_height="70dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/hour_edit"
                app:layout_constraintStart_toEndOf="@+id/hour_minute_separator"
                app:layout_constraintTop_toBottomOf="@+id/title"
                style="@style/DogCreation.TimePicker.EditLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:textSize="48dp"
                    android:tag="binding_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    style="@style/DogCreation.TimePicker.EditText"/>
            </app.dogo.com.dogo_android.view.compat.FocusedBorderTextInput>
            <TextView
                android:id="@+id/hour_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/hours.general"
                app:layout_constraintEnd_toEndOf="@+id/hour_edit"
                app:layout_constraintStart_toStartOf="@+id/hour_edit"
                app:layout_constraintTop_toBottomOf="@+id/hour_edit"
                style="@style/DogCreationReminderTimeLabelText"/>
            <TextView
                android:id="@+id/minute_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minutes.general"
                app:layout_constraintBaseline_toBaselineOf="@+id/hour_label"
                app:layout_constraintEnd_toEndOf="@+id/minute_edit"
                app:layout_constraintStart_toStartOf="@+id/minute_edit"
                style="@style/DogCreationReminderTimeLabelText"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/darkGray"
                android:id="@+id/day_of_the_week_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:text="@string/reminder.daily.days.of.the.week"
                android:lineSpacingExtra="10sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:letterSpacing="0.01"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/hour_label"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/check_group_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/day_of_the_week_textview">
                <CheckBox
                    android:id="@+id/toggle_button1"
                    android:tag="binding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DogCreationReminderCheckBox"/>
                <CheckBox
                    android:id="@+id/toggle_button2"
                    android:tag="binding_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DogCreationReminderCheckBox"/>
                <CheckBox
                    android:id="@+id/toggle_button3"
                    android:tag="binding_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DogCreationReminderCheckBox"/>
                <CheckBox
                    android:id="@+id/toggle_button4"
                    android:tag="binding_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DogCreationReminderCheckBox"/>
                <CheckBox
                    android:id="@+id/toggle_button5"
                    android:tag="binding_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DogCreationReminderCheckBox"/>
                <CheckBox
                    android:id="@+id/toggle_button6"
                    android:tag="binding_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DogCreationReminderCheckBox"/>
                <CheckBox
                    android:id="@+id/toggle_button7"
                    android:tag="binding_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DogCreationReminderCheckBox"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:text="@string/general.save"
                android:textAllCaps="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/check_group_view"
                style="@style/DashboardYellowButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
