<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_card"
    android:tag="layout/layout_dashboard_exams_card_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/ripple_effect_transparent_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:tag="binding_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="20dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@+id/exam_progress_bar"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            style="@style/DashboardExamCardTextTitle"/>
        <FrameLayout
            android:id="@+id/active_exams_image"
            android:tag="binding_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintVertical_bias="0">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/active_exams_number"
                android:tag="binding_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@+id/active_exams_image"
                app:layout_constraintEnd_toEndOf="@+id/active_exams_image"
                app:layout_constraintStart_toStartOf="@+id/active_exams_image"
                app:layout_constraintTop_toTopOf="@+id/active_exams_image"
                style="@style/DashboardExamCardTextDescription"/>
        </FrameLayout>
        <TextView
            android:gravity="start"
            android:id="@+id/exam_count"
            android:tag="binding_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/max_progress_bar_length"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/title"
            style="@style/DashboardExamCardTextDescription"/>
        <ProgressBar
            android:id="@+id/exam_progress_bar"
            android:tag="binding_5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toStartOf="@+id/progress_bar_length_barrier"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/exam_count"
            style="@style/ProgramExamsProgressWithLayout"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/max_progress_bar_length"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            app:layout_constraintGuide_percent="0.7"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/progress_bar_length_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="5"
            app:constraint_referenced_ids="max_progress_bar_length,diploma_image"/>
        <ImageView
            android:id="@+id/diploma_image"
            android:tag="binding_6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
