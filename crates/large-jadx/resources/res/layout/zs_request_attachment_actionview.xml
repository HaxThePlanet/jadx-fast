<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:importantForAccessibility="4">
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        app:srcCompat="@drawable/zs_request_conversations_disabled_menu_ic_add_attachments"/>
    <FrameLayout
        android:layout_gravity="0x800035"
        android:id="@+id/request_actionview_badge_container"
        android:visibility="gone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp">
        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/request_actionview_compat_shadow"
            android:background="@drawable/zs_request_dropshadow"
            android:visibility="gone"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:textSize="10sp"
            android:textStyle="0x1"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/request_actionview_attachment_count"
            android:background="@drawable/zs_request_attachment_actionview_badge"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:elevation="2dp"/>
    </FrameLayout>
</merge>
