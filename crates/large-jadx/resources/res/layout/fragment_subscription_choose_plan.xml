<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_subscription_choose_plan_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="@string/benfit.screen.choose.plan.button"
        app:titleTextAppearance="@style/Toolbar.normalTitleText"
        app:titleTextColor="@color/darkGray"
        style="@style/dailyTrainingToolbarWithLayout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/resubscribe"
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="0">
                <TextView
                    android:textColor="#4c5d56"
                    android:id="@+id/graph_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/resubscribe.screen.header"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0"
                    style="@style/SubscriptionDiscountTitle"/>
                <ImageView
                    android:id="@+id/graph"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toBottomOf="@+id/graph_header"
                    app:srcCompat="@drawable/graph_progress"/>
                <TextView
                    android:textSize="10sp"
                    android:textStyle="0x1"
                    android:textColor="#00b970"
                    android:id="@+id/graph_with_dogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/resubscribe.screen.wit.dogo"
                    android:lineSpacingExtra="5sp"
                    app:layout_constraintEnd_toEndOf="@+id/graph"
                    app:layout_constraintTop_toTopOf="@+id/graph"/>
                <TextView
                    android:textSize="10sp"
                    android:textStyle="0x1"
                    android:textColor="#fc6a64"
                    android:id="@+id/graph_without_dogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resubscribe.screen.without.help"
                    android:lineSpacingExtra="5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/graph"
                    app:layout_constraintEnd_toEndOf="@+id/graph"
                    app:layout_constraintTop_toTopOf="@+id/graph"
                    app:layout_constraintVertical_bias="0.7"/>
                <TextView
                    android:textSize="8sp"
                    android:textColor="#b8c0be"
                    android:id="@+id/graph_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resubscribe.screen.graph.x"
                    android:lineSpacingExtra="5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/graph"
                    app:layout_constraintEnd_toEndOf="@+id/graph"/>
                <TextView
                    android:textSize="8sp"
                    android:textColor="#b8c0be"
                    android:id="@+id/graph_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resubscribe.screen.graph.y"
                    android:lineSpacingExtra="5sp"
                    android:rotation="-90"
                    app:layout_constraintBottom_toBottomOf="@+id/graph"
                    app:layout_constraintStart_toStartOf="@+id/graph"
                    app:layout_constraintTop_toTopOf="@+id/graph"
                    app:layout_constraintVertical_bias="0.2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/benefit_coupon_title"
                android:tag="binding_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:layout_constraintTop_toTopOf="0">
                <TextView
                    android:textColor="@color/secondary"
                    android:id="@+id/offer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/subscription.screen.only.now"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0"
                    style="@style/SubscriptionDiscountTitle"/>
                <TextView
                    android:textSize="28sp"
                    android:textColor="#4c5d56"
                    android:id="@+id/discount_text"
                    android:tag="binding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toBottomOf="@+id/offer_text"
                    style="@style/SubscriptionPlanDiscountTitle"/>
                <include
                    android:id="@+id/timer_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toBottomOf="@+id/discount_text"
                    layout="@layout/layout_discount_timer"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textColor="#4c5d56"
                android:id="@+id/title_text_view"
                android:tag="binding_4"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/subscription.benefit.header"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0"
                style="@style/SubscriptionPlanDiscountTitle"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/title_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="3"
                app:constraint_referenced_ids="title_text_view,benefit_coupon_title,resubscribe"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/offering_list"
                android:tag="binding_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toStartOf="@+id/end_margin"
                app:layout_constraintStart_toStartOf="@+id/start_margin"
                app:layout_constraintTop_toBottomOf="@+id/title_barrier"/>
            <FrameLayout
                android:tag="binding_6"
                android:background="@drawable/rectangle_rounded_corner"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/darkerGreen"
                app:layout_constraintBottom_toTopOf="@+id/offering_list"
                app:layout_constraintEnd_toStartOf="@+id/end_margin"
                app:layout_constraintTop_toTopOf="@+id/offering_list">
                <TextView
                    android:tag="binding_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SubscriptionSavingsText"/>
            </FrameLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resubscribe_button"
                android:tag="binding_8"
                android:layout_width="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/resubscribe.button"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/end_margin"
                app:layout_constraintStart_toStartOf="@+id/start_margin"
                app:layout_constraintTop_toBottomOf="@+id/offering_list"
                app:layout_constraintWidth_min="264dp"
                style="@style/SubscriptionPlanButton"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton"
                android:tag="binding_9"
                android:layout_width="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/resubscribe.button"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/end_margin"
                app:layout_constraintStart_toStartOf="@+id/start_margin"
                app:layout_constraintTop_toBottomOf="@+id/offering_list"
                app:layout_constraintWidth_min="264dp"
                style="@style/SubscriptionPlanButton"/>
            <TextView
                android:id="@+id/payment_footnote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/subscription.android.will.continue"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toStartOf="@+id/end_margin"
                app:layout_constraintStart_toStartOf="@+id/start_margin"
                app:layout_constraintTop_toBottomOf="@+id/materialButton"
                app:layout_constraintVertical_bias="0"
                style="@style/SubscriptionFootnote"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/start_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="24dp"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/end_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
