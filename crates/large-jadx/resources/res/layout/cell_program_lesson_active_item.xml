<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="layout/cell_program_lesson_active_item_0"
    android:background="@drawable/ripple_effect_transparent_rectangle"
    style="@style/LessonCellWithLayout">
    <TextView
        android:id="@+id/name"
        android:tag="binding_1"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        style="@style/LessonActiveName"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"/>
    <TextView
        android:id="@+id/description"
        android:tag="binding_2"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintEnd_toStartOf="@+id/icon_status"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/name"
        style="@style/LessonActiveDescription"/>
    <ImageView
        android:id="@+id/icon_status"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:srcCompat="@drawable/icon_arrow_right"
        style="@style/LessonStatusIcon"/>
    <ImageView
        android:id="@+id/icon_notification"
        android:tag="binding_3"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:srcCompat="@drawable/icon_notification_bubble_red"
        style="@style/LessonStatusIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>
