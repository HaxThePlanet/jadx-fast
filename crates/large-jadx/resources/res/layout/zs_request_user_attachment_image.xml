<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="2"
    style="@style/ZendeskSdkTheme.Light.Request.User.Attachment.Holder">
    <androidx.cardview.widget.CardView
        android:id="@+id/request_user_message_attachment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/ZendeskSdkTheme.Light.Request.User.Attachment.Bubble">
        <ImageView
            android:id="@+id/request_user_message_attachment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="2"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/request_user_attachment_image_status"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/request_user_message_attachment_container"
        android:layout_alignParentRight="true"
        android:importantForAccessibility="2"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"
        style="@style/ZendeskSdkTheme.Light.Request.Message.Status"/>
</RelativeLayout>
