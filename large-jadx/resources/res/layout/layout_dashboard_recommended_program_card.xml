<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_dashboard_recommended_program_card_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/program_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/program_background_card"
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/dogo_logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/vector_dogo_icon"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="0"
                        app:layout_constraintTop_toTopOf="0"/>
                    <TextView
                        android:textStyle="0x0"
                        android:id="@+id/recommended_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/subscription.recommended"
                        android:layout_marginStart="4dp"
                        android:letterSpacing="0.03"
                        app:layout_constraintBottom_toBottomOf="@+id/dogo_logo"
                        app:layout_constraintStart_toEndOf="@+id/dogo_logo"
                        app:layout_constraintTop_toTopOf="@+id/dogo_logo"
                        style="@style/OnboardingRecommendedProgramLabel"/>
                    <ImageView
                        android:id="@+id/program_image"
                        android:tag="binding_2"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toEndOf="0"
                        app:layout_constraintHeight_default="2"
                        app:layout_constraintStart_toStartOf="0"
                        app:layout_constraintTop_toTopOf="0"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="20sp"
                android:textColor="#4c5d56"
                android:id="@+id/program_name"
                android:tag="binding_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/weeks"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/program_background_card"
                style="@style/ProgramCardTextTitle"/>
            <TextView
                android:textColor="#839490"
                android:id="@+id/skills"
                android:tag="binding_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/program_name"
                style="@style/ProgramCardTextDescription"/>
            <TextView
                android:textColor="#839490"
                android:id="@+id/text_separation_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/skills"
                app:layout_constraintTop_toTopOf="@+id/skills"
                style="@style/ProgramCardTextDescription"/>
            <TextView
                android:textColor="#839490"
                android:id="@+id/weeks"
                android:tag="binding_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/text_separation_line"
                app:layout_constraintTop_toTopOf="@+id/skills"
                style="@style/ProgramCardTextDescription"/>
            <Button
                android:id="@+id/review_program_button"
                android:tag="binding_6"
                android:layout_width="0dp"
                android:layout_marginTop="20dp"
                android:text="@string/training.program.review"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/weeks"
                style="@style/DashboardYellowButton"/>
            <Button
                android:id="@+id/all_programs_button"
                android:tag="binding_7"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="28dp"
                android:text="@string/program.other.programs"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/review_program_button"
                style="@style/DashboardButtonOutlinedDark"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
