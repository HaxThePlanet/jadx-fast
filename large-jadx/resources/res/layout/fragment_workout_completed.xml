<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_workout_completed_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="#00b970"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/dog_animation"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="380dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0"
            app:lottie_autoPlay="true"
            app:lottie_fileName="platform_jump.json"
            app:lottie_loop="true"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/workout_completion_screen_top_margin"
            android:text="@string/streaks.congratulation.screen"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/dog_animation"
            style="@style/WorkoutCompletedTitle"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/sub_text"
            android:tag="binding_1"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/title_text"
            style="@style/ProgramLessonCompleteDescription"/>
        <ImageView
            android:id="@+id/star_divider"
            android:tag="binding_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_28"
            android:adjustViewBounds="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/sub_text"
            app:srcCompat="@drawable/ic_star_divider_"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/longest_streak_text"
            android:tag="binding_3"
            android:layout_marginTop="@dimen/margin_28"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/star_divider"
            style="@style/ProgramLessonCompleteDescription"/>
        <Button
            android:id="@+id/continue_button"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_24"
            android:text="@string/general.continue"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/longest_streak_text"
            style="@style/YellowUnelevatedButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
