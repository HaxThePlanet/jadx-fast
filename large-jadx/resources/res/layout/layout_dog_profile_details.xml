<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_dog_profile_details_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/list_view"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_24"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0">
        <include
            android:id="@+id/name"
            layout="@layout/layout_profile_data_row"/>
        <include
            android:id="@+id/breed"
            layout="@layout/layout_profile_data_row"/>
        <include
            android:id="@+id/birthday"
            layout="@layout/layout_profile_data_row"/>
        <include
            android:id="@+id/gender"
            layout="@layout/layout_profile_data_row"/>
    </LinearLayout>
    <Button
        android:id="@+id/dog_parents_button"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="@dimen/margin_8"
        android:text="@string/owners.2_9"
        app:icon="@drawable/ic_parents"
        app:layout_constraintBottom_toBottomOf="@+id/dog_delete_button"
        app:layout_constraintEnd_toStartOf="@+id/dog_delete_button"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="@+id/dog_delete_button"
        app:layout_constraintVertical_bias="0.2"
        style="@style/DogProfileOutlinedButton"/>
    <Button
        android:textColor="@color/warning"
        android:id="@+id/dog_delete_button"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginBottom="@dimen/margin_8"
        android:text="@string/dog.delete.title"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toEndOf="@+id/dog_parents_button"
        app:layout_constraintTop_toBottomOf="@+id/list_view"
        app:layout_constraintVertical_bias="0.2"
        app:rippleColor="@color/lightGray"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
